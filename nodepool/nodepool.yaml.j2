elements-dir: /etc/nodepool/elements
images-dir: /opt/nodepool/images

zookeeper-servers:
{% if 'zookeeper' in groups %}
{% for host in groups['zookeeper'] %}
  - host: '{{ hostvars[host].ansible_host | ipwrap }}'
    port: 2181
{% endfor %}
{% endif %}

labels:
  - name: ubuntu-xenial
  - name: ubuntu-bionic

providers:
  - name: otc-eu-de
    cloud: otc
    rate: 0.25
    diskimages: &provider_diskimages
      - name: ubuntu-xenial
      - name: ubuntu-bionic
    pools:
      - name: dynamic
{% if nodepool_os_cloud_networks %}
        networks:
          - {{ nodepool_os_cloud_networks }}
{% endif %}
{% if nodepool_os_cloud_security_groups %}
        security-groups:
          - {{ nodepool_os_cloud_security_groups }}
{% endif %}
        auto-floating-ip: True
        labels: &provider_pools_labels
          - name: ubuntu-bionic
            flavor-name: s2.xlarge.2
            diskimage: ubuntu-bionic
            key-name: nodepool
            console-log: true
          - name: ubuntu-xenial
            flavor-name: s2.xlarge.2
            diskimage: ubuntu-xenial
            key-name: nodepool

diskimages:
  - name: ubuntu-xenial
    elements:
      - ubuntu-minimal
      - growroot
      - openssh-server
      - simple-init
      - vm
      - zuul-worker
    release: xenial
    env-vars:
      TMPDIR: /opt/nodepool/tmp
      DIB_CHECKSUM: '1'
      DIB_DEBIAN_COMPONENTS: 'main,universe'
      DIB_IMAGE_CACHE: /opt/nodepool/cache
  - name: ubuntu-bionic
    elements:
      - ubuntu-minimal
      - growroot
      - openssh-server
      - simple-init
      - vm
      - zuul-worker
    release: bionic
    env-vars:
      TMPDIR: /opt/nodepool/tmp
      DIB_CHECKSUM: '1'
      DIB_DEBIAN_COMPONENTS: 'main,universe'
      DIB_IMAGE_CACHE: /opt/nodepool/cache
