elements-dir: /etc/nodepool/elements
images-dir: /opt/nodepool/images

zookeeper-servers:
{% if 'zookeeper' in groups %}
{% for host in groups['zookeeper'] %}
  - host: '{{ hostvars[host].ansible_host | ipwrap }}'
    port: 2181
{% endfor %}
{% endif %}

labels:
  - name: ubuntu-xenial
  - name: fedora-27
  - name: fedora-28

providers:
  - name: otc-eu-de
    cloud: otc
    rate: 0.25
    diskimages: &provider_diskimages
      - name: fedora-28
    pools:
      - name: dynamic
{% if nodepool_os_cloud_networks %}
        networks:
          - {{ nodepool_os_cloud_networks }}
{% endif %}
{% if nodepool_os_cloud_security_groups %}
        security-groups:
          - {{ nodepool_os_cloud_security_groups }}
{% endif %}
        auto-floating-ip: False
        labels: &provider_pools_labels
          - name: fedora-27
            flavor-name: s2.xlarge.2
            diskimage: fedora-27
            key-name: nodepool
            console-log: true
          - name: fedora-28
            flavor-name: s2.xlarge.2
            diskimage: fedora-28
            key-name: nodepool
            console-log: true

diskimages:
  - name: ubuntu-xenial
    elements:
      - ubuntu-minimal
      - growroot
      - openssh-server
      - simple-init
      - vm
      - zuul-worker
    release: xenial
    env-vars:
      TMPDIR: /opt/nodepool/tmp
      DIB_CHECKSUM: '1'
      DIB_DEBIAN_COMPONENTS: 'main,universe'
      DIB_IMAGE_CACHE: /opt/nodepool/cache
  - name: fedora-27
    pause: false
    elements:
      - fedora-minimal
      - vm
      - simple-init
      # - openstack-repos
      - nodepool-base
      # - cache-devstack
      - initialize-urandom
      - growroot
      - infra-package-needs
      - otc-base
    release: 27
    env-vars:
      TMPDIR: /opt/nodepool/tmp
      DIB_CHECKSUM: '1'
      DIB_IMAGE_CACHE: /opt/nodepool/cache
      QEMU_IMG_OPTIONS: compat=0.10
      DIB_GRUB_TIMEOUT: '0'
      GIT_HTTP_LOW_SPEED_TIME: '300'
      GIT_HTTP_LOW_SPEED_LIMIT: '1000'
  - name: fedora-28
    pause: false
    elements:
      - fedora-minimal
      - vm
      - simple-init
      # - openstack-repos
      - nodepool-base
      # - cache-devstack
      - initialize-urandom
      - growroot
      - infra-package-needs
      - otc-base
    release: 28
    env-vars:
      TMPDIR: /opt/nodepool/tmp
      DIB_CHECKSUM: '1'
      DIB_IMAGE_CACHE: /opt/nodepool/cache
      QEMU_IMG_OPTIONS: compat=0.10
